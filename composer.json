{
    "name": "tre-uniti/belle-idee",
    "description": "Belief-Based inspiration sharing",
    "license": "MIT",
    "type": "project",

    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "illuminate/html": "5.*",
        "doctrine/dbal": "^2.5",
        "jenssegers/agent": "^2.2",
        "league/flysystem-aws-s3-v3": "~1.0",
        "laracasts/flash": "~1.3",
        "fideloper/proxy": "~3.0",
        "predis/predis": "^1.0",
        "mmanos/laravel-search": "dev-master",
        "laravel/cashier": "~5.0",
        "genealabs/laravel-caffeine": "~0.2.0",
        "spatie/laravel-backup": "^3.2",
        "league/flysystem-ziparchive": "^1.0",
        "intervention/image": "^2.3",
        "huddledigital/zendesk-laravel": "~2.0",
        "taxjar/taxjar-php": "^1.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": ["app/Http/helpers.php"],

        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
